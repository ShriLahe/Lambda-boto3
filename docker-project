FROM python:3.4
ADD ./code        //will copy files (app.py) from current dir to /code dir 
WORKDIR /code
RUN pipi nstall -r requirnment.txt   //requirnment.txt  this is for package installation for python
CMD ["python", app.py""]       //this is application file
